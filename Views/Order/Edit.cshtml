@model OrderDTO

<h1>Edit Cart</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label>Item</label>
        <input type="text" class="form-control" placeholder="Enter item" name="item" value="@Model.Item">
    </div>
    <div class="form-group">
        <label>Quantity</label>
        <input type="number" class="form-control" placeholder="Enter quantity" name="quantity" value="@Model.Quantity">
    </div>
    <div class="form-group">
        <label>Created by</label>
        <input type="text" class="form-control" placeholder="Enter the creator" name="createdBy" value="@Model.CreatedBy">
    </div>
    <div class="form-group">
        <label>Ordered on</label>
        <input type="datetime" class="form-control" placeholder="Enter the time of the order" name="orderedOn" value="@Model.OrderedOn">
    </div>
    <div class="form-group">
        <label>Full Price</label>
        <input type="number" class="form-control" placeholder="Enter full price" name="fullPrice" value="@Model.FullPrice">
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
    <a asp-action="Index">
        <button type="button" class="btn btn-secondary">Cancel</button>
    </a>
</form>