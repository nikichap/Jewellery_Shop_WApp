@model Item

<h1>Edit Item</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" placeholder="Enter name" name="name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="number" class="form-control" placeholder="Enter price" name="price" value="@Model.Price">
    </div>
    <div class="form-group">
        <label>Type</label>
        <input type="text" class="form-control" placeholder="Enter type" name="type" value="@Model.Type">
    </div>
    <div class="form-group">
        <label>Quantity Available</label>
        <input type="number" class="form-control" placeholder="Enter available quantity" name="quantityAvailable" value="@Model.QuantityAvailable">
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
    <a asp-action="Index">
        <button type="button" class="btn btn-secondary">Cancel</button>
    </a>
</form>